/// ADAS System Component World - Standardized world for system management components
package adas:system-component;

/// System components handle monitoring, safety, communication, and coordination
world system-component {
    /// System control and resource management
    import adas:orchestration/execution-control;
    import adas:orchestration/resource-management;
    
    /// Import all data types for monitoring
    import adas:data/sensor-data;
    import adas:data/perception-data;
    import adas:data/planning-data;
    
    /// Export diagnostics and monitoring
    export adas:diagnostics/health-monitoring;
    export adas:diagnostics/performance-monitoring;
}