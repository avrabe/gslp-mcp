/// Production-Grade Graphics Visualizer Component World
/// Demonstrates real automotive HMI and display systems
package showcase:visualizer;

world visualizer {
    // ============ IMPORTS ============
    // Standard automotive orchestration for system integration
    import adas:orchestration/execution-control;
    import adas:orchestration/resource-management;
    
    // Complete automotive data for visualization
    import adas:common-types/types;
    import adas:common-types/sensor-fusion;
    import adas:data/sensor-data;           // Raw camera frames
    import adas:data/perception-data;       // Detection overlays
    import adas:data/prediction-data;       // Trajectory predictions
    import adas:data/planning-data;         // Planned vehicle paths
    
    // System monitoring for metrics overlay
    import adas:diagnostics/performance-monitoring;
    import adas:diagnostics/health-monitoring;
    
    // Graphics capabilities for automotive displays
    import wasi:io/poll@0.2.0;
    import wasi:clocks/wall-clock@0.2.0;
    import wasi:clocks/monotonic-clock@0.2.0;
    
    // Future: WASI-GFX for hardware-accelerated automotive graphics
    // import wasi:gfx/surface@0.1.0;
    // import wasi:gfx/context@0.1.0;
    
    // ============ EXPORTS ============
    // Production graphics rendering interface (automotive HMI)
    export adas:graphics/graphics-visualizer;
    
    // Standard automotive diagnostics
    export adas:diagnostics/health-monitoring;
    export adas:diagnostics/performance-monitoring;
    
    // Showcase visualization controls for demo interaction
    export showcase:graphics/display-control;
}