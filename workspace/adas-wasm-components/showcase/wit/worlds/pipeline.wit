/// Production-Grade Pipeline Orchestrator Component World
/// Demonstrates real automotive system integration and FEO compliance
package showcase:pipeline;

world pipeline {
    // ============ IMPORTS ============
    // Full automotive orchestration capabilities for production systems
    import adas:orchestration/execution-control;
    import adas:orchestration/resource-management;
    import adas:orchestration/data-flow;
    
    // Complete automotive data interfaces for system integration
    import adas:common-types/types;
    import adas:common-types/sensor-fusion;
    import adas:data/sensor-data;
    import adas:data/perception-data;
    import adas:data/prediction-data;
    import adas:data/planning-data;
    
    // Production component control interfaces
    import adas:control/sensor-control;
    import adas:control/ai-control;
    import adas:control/vehicle-control;
    
    // Automotive diagnostic and monitoring systems
    import adas:diagnostics/health-monitoring;
    import adas:diagnostics/performance-monitoring;
    
    // Showcase component interfaces for demo integration
    import showcase:video/playback-control;
    import showcase:ai/object-processor;
    import showcase:graphics/display-control;
    
    // System interfaces for automotive compliance
    import wasi:clocks/wall-clock@0.2.0;
    import wasi:clocks/monotonic-clock@0.2.0;
    
    // ============ EXPORTS ============
    // System-level orchestration (automotive system coordinator)
    export adas:orchestration/execution-control;
    export adas:orchestration/data-flow;
    export adas:orchestration/resource-management;
    
    // Aggregated system diagnostics (automotive system health)
    export adas:diagnostics/health-monitoring;
    export adas:diagnostics/performance-monitoring;
    
    // Showcase demo control for production demonstration
    export showcase:demo/demo-controller;
}